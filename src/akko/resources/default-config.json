{
  "app_name": "AKKO",
  "data_paths": {
    "credentials": "data/encrypted/credentials.enc",
    "private_links": "data/private/private_links.json",
    "public_links": "data/public/public_links.json"
  },
  "features": {
    "allow_public_links": true,
    "show_icons": true
  },
  "security": {
    "auto_lock_minutes": 1,
    "hash_check": true
  },
  "theme": {
    "accent_color": "#00C9A7",
    "compact_view": true,
    "font": "Inter",
    "mode": "light",
    "secondary_color": "#4F46E5"
  },
  "dev_mode": {
    "log_level": "warning"
  }
}
